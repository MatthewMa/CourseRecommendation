<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
                android:background="@drawable/notification_bg"
        android:gravity="center">
    <TextSwitcher
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ts_notification"
        android:layout_margin="5dp"
        android:layout_marginBottom="20dp"></TextSwitcher>
    <CheckBox
        android:id="@+id/do_not_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:button="@null"
        android:drawableLeft="@drawable/selector_checkboxbg"
        android:drawablePadding="4.0dip"
        android:text="@string/do_not_show"
        android:textColor="#000"
        android:textSize="14.0sp"
        android:gravity="bottom"
        android:textAlignment="center"
        />
    <Button android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_green_light"
            android:layout_margin="5dp"
            android:textSize="20sp"
            android:text="Get Strated"
            android:textColor="@android:color/black"
            android:id="@+id/btn_start"
            />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:id="@+id/tv_pager"
        android:textColor="@android:color/holo_red_light"
        android:textSize="18sp"
        android:layout_marginRight="5dp"/>



</LinearLayout>